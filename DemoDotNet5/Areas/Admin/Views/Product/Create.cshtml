
@model DemoDotNet5.ViewModel.ProductViewModel
@{
    var categories = ViewBag.cats;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Product</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label for="email">Name:</label>
                                <input type="text" asp-for="Name" class="form-control" placeholder="Enter product name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="pwd">Price:</label>
                                <input type="text" asp-for="Price" class="form-control" placeholder="Enter product price">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="pwd">Image:</label>
                                <input type="file" asp-for="FileUpload" class="form-control">
                                <span asp-validation-for="FileUpload" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="sel1">Category ?:</label>
                                <select class="form-control" id="sel1" asp-for="CategoryId">
                                    @foreach (var obj in categories)
                                    {
                                        <option value="@obj.Id">@obj.Name</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Insert</button>
                            </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

