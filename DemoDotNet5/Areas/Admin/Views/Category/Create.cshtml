@model DemoDotNet5.ViewModel.CategoryViewModel

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Category</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Create</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="CreatePost" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="">Name: </label>
                                    <input asp-for="Name" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="">Description: </label>
                                    <input asp-for="Description" type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter description">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Insert</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
