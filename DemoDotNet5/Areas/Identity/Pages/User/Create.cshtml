@page
@model DemoDotNet5.Areas.Identity.Pages.User.CreateModel
@{
}

<div class="container">
    <h2>Insert Role User : @Model.user.UserName</h2>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label for="email">Role Name:</label>
             @Html.ListBoxFor(m =>m.RoleNames,Model.allRoles,new { 
                    id="id-select-roles",
                    @class = "form-control"
            })
            <span asp-validation-for="RoleNames" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Insert</button>
        <a class="btn btn-secondary" asp-page="./Index">Back</a>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
