@page
@model DemoDotNet5.Areas.Identity.Pages.Claims.DeleteModel
@{
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Claims</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Edit</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Input.ClaimType"></label>
                                <input asp-for="Input.ClaimType" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter claim type">
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ClaimValue"></label>
                                <input asp-for="Input.ClaimValue" type="text" class="form-control" id="exampleInputEmail1" placeholder="Enter claim value">
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Update claim for User</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
