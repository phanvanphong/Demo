@model DemoDotNet5.ViewModel.CategoryViewModel

<div class="container">
    <form method="post" asp-action="EditPost">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label for="email">Category Name:</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter Category Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="pwd">Descripttion:</label>
            <input asp-for="Description" type="text" class="form-control" placeholder="Enter Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a class="btn btn-secondary" asp-controller="Category" asp-action="Index">Back</a>
    </form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
