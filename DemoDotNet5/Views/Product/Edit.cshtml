
@model DemoDotNet5.ViewModel.ProductViewModel
@{
    var categories = ViewBag.cats;
}
<div class="container">
    <h2>Edit Product</h2>
    <form method="post" asp-action="EditPost" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <div class="form-group">
            <label for="email">Name:</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Enter product name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="pwd">Price:</label>
            <input type="text" asp-for="Price" class="form-control" placeholder="Enter product price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="pwd">Image:</label>
            <input type="file" asp-for="FileUpload" class="form-control" hidden>
            <input type="file" asp-for="FileEdit"class="form-control" />
            <img src="~/images/@Model.ImageName" width="100" height="100" alt="" /><br />
            <span>@Model.ImageName</span><br />
            <span asp-validation-for="FileUpload" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="sel1">Category ?:</label>
            <select class="form-control" id="sel1" asp-for="CategoryId">
                @foreach (var obj in categories)
                {
                    @if (Model.CategoryId == obj.Id)
                    {
                        <option value="@obj.Id" selected>@obj.Name</option>
                    }
                    <option value="@obj.Id">@obj.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a class="btn btn-secondary" asp-controller="Product" asp-action="Index">
            Back
        </a>
    </form>
</div>

