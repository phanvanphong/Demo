    <!--product info end-->
    <!--Related Products area start-->
    <div class="new_product_area">
        <div class="block_title">
            <h3>Related Products</h3>
        </div>
        <div class="row">
            <div class="product_active owl-carousel">
                @foreach (var item in relatedProducts)
                {
                    <div class="col-lg-3">
                        <div class="single_product">
                            <div class="product_thumb">
                                <a asp-controller="Home" asp-action="DetailProduct" asp-route-Id="@item.Id"><img src="~/images/@item.ImageName" alt=""></a>
                                <div class="img_icone">
                                    <img src="~/site/assets\img\cart\span-new.png" alt="">
                                </div>
                                <div class="product_action">
                                    <a href="#"> <i class="fa fa-shopping-cart"></i> Add to cart</a>
                                </div>
                            </div>
                            <div class="product_content">
                                <span class="product_price">@item.Price <sup>VNĐ</sup></span>
                                <h3 class="product_title"><a href="single-product.html">@item.Name</a></h3>
                            </div>
                            <div class="product_info">
                                <ul>
