@model DemoDotNet5.ViewModel.CustomerViewModel
@{
    ViewData["Title"] = "Login or Register";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="col-lg-12 col-md-12">
    <div class="customer_login">
        <div class="row">
            <!--login area start-->
            <div class="col-lg-6 col-md-6">
                <div class="account_form">
                    <h2>login</h2>
                    <form action="CheckLoginCustomer" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <p>
                            <label>Username or email <span>*</span></label>
                            <input asp-for="Username" type="text">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </p>
                        <p>
                            <label>Passwords <span>*</span></label>
                            <input asp-for="Password" type="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </p>
                        <div class="login_submit">
                            <button type="submit">login</button>
                            <label for="remember">
                                <input id="remember" type="checkbox">
                                Remember me
                            </label>
                            <a href="#">Lost your password?</a>
                        </div>

                    </form>
                </div>
            </div>
            <!--login area start-->
            <!--register area start-->
            <div class="col-lg-6 col-md-6">
                <div class="account_form register">
                    <h2>Register</h2>
                    <form action="#">
                        <p>
                            <label>Username  <span>*</span></label>
                            <input asp-for="Username" type="text">
                        </p>
                        <p>
                            <label>Password <span>*</span></label>
                            <input asp-for="Password" type="text">
                        </p>
                        <p>
                            <label>Fullname <span>*</span></label>
                            <input asp-for="Fullname" type="text">
                        </p>
                        <p>
                            <label>Email <span>*</span></label>
                            <input asp-for="Email" type="text">
                        </p>
                        <p>
                            <label>Address <span>*</span></label>
                            <input asp-for="Address" type="text">
                        </p>
                        @*<p>
                            <label>Passwords <span>*</span></label>
                            <input asp-for="CreatedAt" type="hidden">
                        </p>*@
                        <div class="login_submit">
                            <button type="submit">Register</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--register area end-->
        </div>
    </div>
</div>


